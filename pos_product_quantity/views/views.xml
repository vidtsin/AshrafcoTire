<odoo>
    <data>


        <record model="ir.ui.view" id="pos_product_quantity_pos_config_form">
            <field name="name">product.quantity.pos.config.form</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
            <field name="arch" type="xml">

                <xpath expr="//div[@id='category_reference']" position="after">
                    <div id="category_reference" class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="display_product_qty"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="display_product_qty" string="Available Quantities"/>
                            <div class="text-muted">
                                Show Product Available Quantities Button
                            </div>
                        </div>
                    </div>
                </xpath>


            </field>
        </record>


    </data>
</odoo>