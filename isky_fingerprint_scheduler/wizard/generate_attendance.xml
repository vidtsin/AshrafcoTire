<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_zk_attendance_generate_form" model="ir.ui.view">
        <field name="name">zk.attendance.form</field>
        <field name="model">zk.attendance</field>
        <field name="arch" type="xml">
            <form string="Generate Attendance">
                <group>
                    <field name="device_id" widget="selection"/>
                </group>
                <footer>
                    <button name="download_attendance" type="object" string="Download Attendance Data" class="oe_highlight"
                            icon="fa-download " confirm="Are you sure you want to do this?"/>

                    <button name="clear_attendance" type="object" string="Clear Machine Attendance Records" class="oe_highlight"
                            icon="fa-remove " confirm="You will Delete all Attendance records from this Machine , Did you finish Download all this data..?? "/>
                </footer>
            </form>
        </field>
    </record>
</odoo>